var tls = require("tls");
var https = require("https");
var fs = require("fs");
var app = require("../app");

const options = {
  port: 443,
  key: fs.readFileSync(
    "C:/Users/97253/Desktop/degree/thirdGarade/semesterB/Computer-security/localhost-key.pem"
  ),
  cert: fs.readFileSync(
    "C:/Users/97253/Desktop/degree/thirdGarade/semesterB/Computer-security/localhost.pem"
  ),
  minVersion: tls.Server.TLSv1_2_method,
};

const server = https.createServer(options, app);

server.listen(process.env.PORT, () => {
  console.log("Server is running on port " + process.env.PORT);
});
